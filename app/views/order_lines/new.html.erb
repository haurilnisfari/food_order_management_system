<!-- Main -->
<main>
    <section class="section-index">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pl-lg-0">
                    <div class="card card-category">
                        <div class="menu-new mt 3">
                            <h2 class="heading-new-menu">Cart</h2>
                                <div class="form-group">
                                    <%= form_for(@line) do |f| %>

                                        <%= f.label :menu_item_id, { class: "control-label col-sm-3"} %>
                                        <div class="col-sm-10">
                                            <%= f.select :menu_item_id, @menus.pluck(:name, :id), {prompt: "Select Menu Item"}, { class: "form-control" }%>
                                        </div>
                                        </br>

                                        <%= f.label :price, { class: "control-label col-sm-3"} %>
                                        <div class="col-sm-10">
                                            <%= f.text_field :price, :class => "form-control", :placeholder => "Enter Price" %>
                                        </div>
                                        </br>

                                        <button type="submit" class="btn btn-cancel">
                                            <%= link_to 'Cancel', order_lines_path %>
                                        </button>
                                        <%= f.submit "Save" , { class: "btn btn-save-menu mb-2 px-4" } %>
                                    <% end %>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
