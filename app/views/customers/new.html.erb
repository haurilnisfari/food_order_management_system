<!-- Main -->
<main>
    <section class="section-menu-form">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pl-lg-0">
                    <div class="card card-category">
                        <div class="menu-new mt 3">
                            <h2 class="heading-new-menu">Create New Customer</h2>
                                <div class="form-group">
                                    <%= form_for(@customer) do |f| %>
                                        <%= f.label :name, { class: "control-label col-sm-3"} %>
                                        <div class="col-sm-10">
                                            <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Customer Name" %>
                                        </div>
                                        </br>
                                        <%= f.label :phone, { class: "control-label col-sm-3"} %>
                                        <div class="col-sm-10">
                                            <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Phone Number" %>
                                        </div>
                                        </br>
                                        <%= f.submit "Save" , { class: "btn btn-save-menu mb-2 px-4" } %>
                                    <% end %>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
