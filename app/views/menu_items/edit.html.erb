<!-- Main -->
<main>
    <section class="section-index">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pl-lg-0">
                    <div class="card card-menu">
                        <div class="menu-new mt 3">
                            <h2 class="heading-new-menu">Edit Menu Item</h2>
                                <div class="form-group">
                                    <%= form_for(@menu) do |f| %>
                                        <%= f.label :name, { class: "control-label col-sm-3"} %>
                                        <div class="col-sm-10">
                                            <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Menu Name" %>
                                        </div>

                                        <%= f.label :price, { class: "control-label col-sm-3"} %>
                                        <div class="col-sm-10">
                                            <%= f.text_field :price, :class => "form-control", :placeholder => "Enter Price" %>
                                        </div>

                                        <%= f.label :note,{ class: "control-label col-sm-3"} %>
                                        <div class="col-sm-10">
                                            <%= f.text_area :note, :class => "form-control", :placeholder => "Enter Description" %>
                                        </div> 

                                        <%= f.label :categories, { class: "control-label col-sm-3"} %>
                                        <div class="col-sm-10">
                                            <% @categories.each do |category| %>
                                                <%= f.check_box :categories, { multiple: true, checked: @category_ids.include?(category.id) }, category.id, false %> <%= category.name %> </br>
                                            <% end %>
                                        </div>
                                        </br>

                                        <button type="submit" class="btn btn-cancel">
                                            <%= link_to 'Cancel', menu_items_path %>
                                        </button>
                                        <%= f.submit "Save" , { class: "btn btn-save-menu mb-2 px-4" } %>
                                    <% end %>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
