<!-- Main -->
<main>
    <section class="section-index">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 pl-lg-12">
                    <div class="card card-category">
                        <div class="menu-new mt 3">
                            <h2 class="heading-new-menu">Edit Cart</h2>
                            <div class="form-group">
                                <%= form_for(@order) do |f| %>
                                    <% if @order.errors.any? %>
                                        <ul>
                                            <% @order.errors.full_messages.each do |message| %>
                                                <li><%= message %></li>
                                            <% end %>
                                        </ul>
                                    <% end %>
                                    <%= f.label :customer_id, { class: "control-label col-sm-3"} %>
                                    <div class="col-sm-10">
                                        <%= f.select :customer_id, @customers.pluck(:name, :id), {prompt: "Select Customer"}, { class: "form-control" } %>
                                    </div>
                                    </br>
                                    </br>
                                    <h3>Cart</h3>
                                    </br>
                                    <div class="orderline-row">
                                        <%= f.fields_for :order_lines do |builder| %>
                                            <%= render 'order_line', f: builder %>
                                        <% end %>
                                    </div>
                                    </br>

                                    <button type="submit" class="btn btn-cancel">
                                        <%= link_to 'Cancel', menu_items_path %>
                                    </button>
                                    <%= f.submit "Update Order" , { class: "btn btn-save-menu mb-2 px-4" } %>

                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
