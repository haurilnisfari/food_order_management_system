<!-- Main -->
<main>
    <section class="section-index" id="index">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 text-left section-index-title">
                    <h2>Category</h2>
                </div>

                <div class="col-md-6 col-sm-6 text-right section-add-menu">
                    <button type="submit" class="btn btn-add-new-menu-item">
                        <%= link_to 'Add New Category', new_category_path %>
                    </button>
                 </div>
            </div>
            </br>

            <div class="leftcolumn">
                <%= form_tag categories_path, method: 'get' do  %>
                    <p>
                        <%= text_field_tag :search %>
                        <%= submit_tag "Search", name: nil %>
                    </p>
                <% end %>
            </div>

            <div class="index-list col-md-6 col-sm-6">
                <table class="table pretty table-responsive-sm text-center table-light table-striped" >
                    <thead>
                        <tr class="text-center">
                            <th>Name</th>
                            <th> </th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @categories.each do |category| %>
                            <tr>
                                <td><%= category.name %></td>
                                <td class="text-center">
                                    <%= link_to 'Edit', edit_category_path(category) %> |
                                    <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure?"} %> 
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <%= paginate @categories %>
            </div>
        </div>
    </section>
</main>
